<style>
    .footer{
        background: linear-gradient(135deg, #4f46e5 0%, #5b21b6 100%);
        padding: 4rem 2rem;
        color: white;
    }
    .footer-container{
        max-width: 1200px;
        margin: 0 auto;
        text-align: center;
    }
    .footer-title{
        font-size: 2.5rem;
        font-weight: 600;
        margin: 0 0 3rem 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }
    .title-underline{
        width: 80px;
        height: 4px;
        background: white;
        border-radius: 2px;
    }
    .footer-content{
        display:flex;
        flex-direction:column;
        align-items: center;
        gap: 0.5rem;
    }
    .footer-text{
        font-size: 1.1rem;
        line-height: 1.8;
        margin: 0;
        opacity: 0.95;
    }
    @media screen and (max-width: 768px){
        .footer{
            padding: 3rem 1.5rem;
        }
        .footer-title{
            font-size: 1.75rem;
            margin-bottom: 2rem;
        }
        .footer-text{
            font-size: 0.95rem;
        }
    }
</style>