---
import recentWork from "../data/recent-work.json";
---

<section class="recent-work-section">
  <h2>Recent Work</h2>

  <div class="carousel-wrapper">
    <button class="nav-btn" onclick="scrollCards(-1)">←</button>

    <div class="carousel" id="carousel">
      {recentWork.map((item) => (
        <div class="card">
          <h3>{item.title}</h3>

          <p><strong>Creator:</strong> {item.creator}</p>
          <p><strong>Type:</strong> {item.type}</p>
          <p><strong>Time:</strong> {item.time.length > 100 ? item.time.slice(0, 100) + " ..." : item.time}</p>
          <p><strong>Class Size:</strong> {item.class_size.length > 100 ? item.class_size.slice(0, 100) + " ..." : item.class_size}</p>

          <a
            class="learn-more-btn"
            href={`/recent-work/${item.id}`}
          >

            Learn more →
          </a>
        </div>
      ))}
    </div>

    <button class="nav-btn" onclick="scrollCards(1)">→</button>
  </div>
</section>

<script is:inline>
  function scrollCards(direction) {
    const container = document.getElementById("carousel");
    const cardWidth = container.firstElementChild.offsetWidth + 32;
    container.scrollBy({
      left: direction * cardWidth * 4,
      behavior: "smooth",
    });
  }
</script>

<style>
.recent-work-section {
  padding: 4rem 2rem;
}

.recent-work-section h2 {
  margin-bottom: 2rem;
  text-align: center;
  font-size: 2rem;
  position: relative;
}

.recent-work-section h2::after {
  content: "";
  display: block;
  width: 60px;
  height: 3px;
  background: #111;
  margin: 0.75rem auto 0;
  border-radius: 2px;
}

/* Layout */
.carousel-wrapper {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.carousel {
  display: grid;
  grid-auto-flow: column;
  grid-auto-columns: minmax(260px, 1fr);
  gap: 2rem;
  overflow-x: auto;
  overflow-y: hidden;
  scroll-behavior: smooth;
  max-width: calc(1 * 280px); /* Small screens: 1 card */
  scrollbar-width: none; /* Firefox */
  -ms-overflow-style: none; /* IE and Edge */
}

.carousel::-webkit-scrollbar {
  display: none; /* Chrome, Safari, Opera */
}

/* Medium screens: 2 cards */
@media (min-width: 640px) {
  .carousel {
    max-width: calc(2 * 280px + 1 * 2rem);
  }
}

/* Large screens: 3 cards */
@media (min-width: 1024px) {
  .carousel {
    max-width: calc(3 * 280px + 2 * 2rem);
  }
}

/* Extra large screens: 4 cards */
@media (min-width: 1440px) {
  .carousel {
    max-width: calc(4 * 280px + 3 * 2rem);
  }
}

/* Cards */
.card {
  background: white;
  border: 1px solid #e5e7eb;
  border-radius: 10px;
  padding: 1.5rem;
  box-shadow: 0 4px 10px rgba(0,0,0,0.06);
  display: flex;
  flex-direction: column;
}

.card h3 {
  font-size: 1.1rem;
  margin-bottom: 0.75rem;
  min-height: 4.5rem;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.card p {
  font-size: 0.9rem;
  line-height: 1.5;
  margin: 0.25rem 0;
}

/* Button */
.learn-more-btn {
  margin-top: auto;
  display: inline-block;
  text-align: center;
  padding: 10px 16px;
  border-radius: 999px;
  background: #111;
  color: #fff;
  font-weight: 500;
  text-decoration: none;
  transition: all 0.2s ease;
}

.learn-more-btn:hover {
  background: #333;
  transform: translateY(-1px);
}

/* Arrows */
.nav-btn {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  border: 1px solid #ddd;
  background: white;
  cursor: pointer;
  font-size: 18px;
}

.nav-btn:hover {
  background: #f5f5f5;
}

</style>
