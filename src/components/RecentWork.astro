---
import recentWork from "../data/recent-work.json";
import RecentWorkIsland from "./RecentWorkIsland";
const distinctTypes = [...new Set((recentWork.map((item) => item.type)))];
---

<section class="recent-work-section">
  <h2>Recent Work</h2>
  <RecentWorkIsland client:load recentWork={recentWork} distinctTypes={distinctTypes} />
</section>



<style is:global>
.recent-work-section {
  padding: 4rem 2rem;
}

.recent-work-section h2 {
  margin-bottom: 2rem;
  text-align: center;
  font-size: 2rem;
  position: relative;
}

.recent-work-section h2::after {
  content: "";
  display: block;
  width: 60px;
  height: 3px;
  background: #111;
  margin: 0.75rem auto 0;
  border-radius: 2px;
}

.filter-row{
  display:flex;
  align-items: center;
  justify-content: center;
  gap: 0.75rem;
  margin: 0 auto 1.5rem;
  flex-wrap: wrap;
}

.filter-label {
  font-size: 0.95rem;
  font-weight: 600;
  color: #111;
}


.type-select {
  appearance : none;
  border: 1px solid #d1d5db;
  background: #fff;
  color: #111;
  border-radius: 999px;
  padding: 0.55rem 2.25rem 0.55rem 0.9rem;
  font-size: 0.9rem;
  cursor: pointer;
  box-shadow: 0 2px 8px rgba(0,0,0,0.04);
  background-image:
    linear-gradient(45deg, transparent 50%, #111 50%),
    linear-gradient(135deg, #111 50%, transparent 50%);
  background-position:
    calc(100% - 14px) calc(50% - 2px),
    calc(100% - 9px)  calc(50% - 2px);
  background-size: 5px 5px, 5px 5px;
  background-repeat: no-repeat;
}


.type-select:hover{
  border-color: #9ca3af;
}

.type-select:focus {
  outline:none;
  border-color: #111;
  box-shadow: 0 0 0 3px rgba(17,17,17,0.12);
}

/* Layout */
.carousel-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 1rem;
}

.carousel {
  display: grid;
  grid-auto-flow: column;
  grid-auto-columns: minmax(260px, 1fr);
  gap: 2rem;
  overflow-x: auto;
  overflow-y: hidden;
  scroll-behavior: smooth;
  max-width: calc(1 * 280px); /* Small screens: 1 card */
  scrollbar-width: none; /* Firefox */
  -ms-overflow-style: none; /* IE and Edge */
}

.carousel::-webkit-scrollbar {
  display: none; /* Chrome, Safari, Opera */
}

/* Medium screens: 2 cards */
@media (min-width: 640px) {
  .carousel {
    max-width: calc(2 * 280px + 1 * 2rem);
  }
}

/* Large screens: 3 cards */
@media (min-width: 1024px) {
  .carousel {
    max-width: calc(3 * 280px + 2 * 2rem);
  }
}

/* Extra large screens: 4 cards */
@media (min-width: 1440px) {
  .carousel {
    max-width: calc(4 * 280px + 3 * 2rem);
  }
}

/* Cards */
.card {
  background: white;
  border: 1px solid #e5e7eb;
  border-radius: 10px;
  padding: 1.5rem;
  box-shadow: 0 4px 10px rgba(0,0,0,0.06);
  display: flex;
  flex-direction: column;
}

.card h3 {
  font-size: 1.1rem;
  margin-bottom: 0.75rem;
  min-height: 4.5rem;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.card p {
  font-size: 0.9rem;
  line-height: 1.5;
  margin: 0.25rem 0;
}

/* Button */
.learn-more-btn {
  margin-top: auto;
  display: inline-block;
  text-align: center;
  padding: 10px 16px;
  border-radius: 999px;
  background: #111;
  color: #fff;
  font-weight: 500;
  text-decoration: none;
  transition: all 0.2s ease;
}

.learn-more-btn:hover {
  background: #333;
  transform: translateY(-1px);
}

/* Arrows */
.nav-btn {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  border: 1px solid #ddd;
  background: white;
  cursor: pointer;
  font-size: 18px;
}

.nav-btn:hover {
  background: #f5f5f5;
}

</style>
